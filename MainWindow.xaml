<Window x:Class="ImageResolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Resolver - EXIF &amp; Resolution Analyzer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{ThemeResource SystemControlAcrylicWindowBrush}">
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Image Resolver" 
                               Style="{ThemeResource TitleTextBlockStyle}" 
                               FontSize="32" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Extract resolution and EXIF metadata from images" 
                               Style="{ThemeResource BodyTextBlockStyle}" 
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Button x:Name="SelectFolderButton" 
                        Grid.Column="1"
                        Content="Select Folder" 
                        Style="{ThemeResource AccentButtonStyle}"
                        Click="SelectFolderButton_Click"
                        Padding="24,12"
                        FontSize="14"
                        FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Image List Section -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Images" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1" 
                              ZoomMode="Disabled"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="ImageListControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,12"
                                        PointerPressed="ImageItem_PointerPressed">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" 
                                                Width="80" 
                                                Height="80"
                                                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                                CornerRadius="4"
                                                Margin="0,0,16,0">
                                            <Grid>
                                                <Image Source="{Binding Thumbnail}" 
                                                       Stretch="UniformToFill"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                                <FontIcon Glyph="&#xE7B3;" 
                                                          FontSize="32"
                                                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}" 
                                                       Style="{ThemeResource BodyTextBlockStyle}"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Resolution}" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                                       Margin="0,4,0,0"/>
                                            <TextBlock Text="{Binding FileSizeFormatted}" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                        </StackPanel>

                                        <FontIcon Grid.Column="2" 
                                                  Glyph="&#xE70F;" 
                                                  FontSize="16"
                                                  Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Divider -->
            <Rectangle Grid.Column="1" 
                       Fill="{ThemeResource SystemControlForegroundBaseLowBrush}"
                       Margin="4,0"/>

            <!-- Details Section -->
            <Grid Grid.Column="2" Margin="24,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Details" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1" 
                              ZoomMode="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailsPanel">
                        <!-- Placeholder -->
                        <TextBlock Text="Select an image to view details" 
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,40"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Footer Section -->
        <Border Grid.Row="2" 
                Background="{ThemeResource SystemControlAcrylicWindowBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0">
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" 
                               Text="Ready" 
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <ProgressRing x:Name="ProgressRing" 
                                  IsActive="False"
                                  Width="16"
                                  Height="16"
                                  Margin="12,0,0,0"
                                  Visibility="Collapsed"/>
                </StackPanel>

                <Button x:Name="ExportButton" 
                        Grid.Column="1"
                        Content="Export to CSV" 
                        Style="{ThemeResource AccentButtonStyle}"
                        Click="ExportButton_Click"
                        IsEnabled="False"
                        Padding="24,12"
                        FontSize="14"
                        FontWeight="SemiBold"/>
            </Grid>
        </Border>
    </Grid>
</Window>

